class Hakuchou_Environment {
	
	private static $instance = null;
	
	private function __construct()
	{
		
	}
	
	/**
	 * @return Hakuchou_Environment
	 *
	 */
	public static function getInstance()
	{
		if (self::$instance == null){
			self::$instance = new Hakuchou_Environment();
		}
		
		return self::$instance;
	}
	
	
	/**
	 * Iso string for databasteDateTime Format
	 *
	 * @return string
	 */
	public function getDatabaseDateTimeFormat()
	{
		return $this->databaseDateTimeFormat;
	}
}